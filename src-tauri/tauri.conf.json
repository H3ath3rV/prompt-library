{
  "productName": "Prompt Library",
  "version": "0.1.0",
  "identifier": "com.promptlibrary.promptlibrary",
  "build": {
    "beforeDevCommand": "npm run dev:web",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "npm run build:web",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Prompt Library",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.png"
    ]
  }
}